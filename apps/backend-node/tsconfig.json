{
    "compilerOptions": {
        "target": "es2020",
        "module": "commonjs",
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitAny": false,
        "moduleResolution": "node",
        "baseUrl": ".",
        "paths": {
            "@workorderpro/shared": [
                "../../packages/shared/src/index.ts"
            ]
        }
    },
    "exclude": [
        "prisma.config.ts",
        "prisma.config.ts",
        "scripts",
        "verification.js",
        "test_prisma.ts",
        "verify_tree.ts",
        "prisma",
        "dist",
        "node_modules"
    ]
}